{
  "name": "llmcode",
  "version": "0.1.0",
  "description": "llmcode root package with workspaces",
  "private": true,
  "workspaces": [
    "workspaces/*"
  ],
  "scripts": {
    "next": "yarn workspace llmcode-next",
    "ws": "yarn workspace llmcode-websocket-server",
    "dev": "concurrently \"yarn next dev\" \"yarn ws start\""
  },
  "devDependencies": {
    "concurrently": "^8.0.1"
  }
}
